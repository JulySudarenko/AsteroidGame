<Window x:Class="Organization.NewDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organization"
        mc:Ignorable="d"
        Title="Подразделение" 
        MinHeight="145" MinWidth="265"
        Height="145" Width="265">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Button Content="Добавить" Margin="5,3,5,5" Grid.Row="2" Padding="1" FontSize="18" MinWidth="199" MinHeight="28" Click="Button_Click"/>
        <Label Content="Новое подразделение" Margin="5,5,5,3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Padding="0" MinWidth="199" MinHeight="28"/>
        <TextBox x:Name="TetxDep" Margin="5,3" Grid.Row="1" TextWrapping="Wrap" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" MinWidth="199" MinHeight="28"/>

    </Grid>
</Window>
